{
    "extends": "tslint:recommended",
    "rulesDirectory": ["codelyzer"],
    "rules": {
        "explicit-override": [true, "exclude-interfaces"],
        "arrow-return-shorthand": true,
        "callable-types": true,
        "comment-format": [true, "check-space"],
        "deprecation": {
            "severity": "warn"
        },
        "eofline": true,
        "forin": true,
        "import-blacklist": [true],
        "interface-over-type-literal": true,
        "label-position": true,
        "import-spacing": true,
        "indent": ["spaces"],
        "no-arg": true,
        "no-construct": true,
        "no-empty": false,
        "no-eval": true,
        "no-unused-expression": true,
        "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "directive-selector": [true, "attribute", "", "camelCase"],
        "component-selector": [true, "element", "", "kebab-case"],
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "component-class-suffix": [true, "Component", "Widget"],
        "directive-class-suffix": true,
        "semicolon": [true],
        "triple-equals": true,
        "typedef": [true, "call-signature", "parameter", "arrow-parameter", "property-declaration", "member-variable-declaration"],
        "class-name": true,
        "no-magic-numbers": [true, -1, 0, 1, 2, 3, 4, 8, 16, 32, 64, 100, 128, 256, 1000],
        "no-debugger": true,
        "no-empty-interface": true,
        "no-duplicate-super": true,
        "no-misused-new": true,
        "no-unnecessary-initializer": true,
        "no-non-null-assertion": true,
        "no-shadowed-variable": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "object-literal-shorthand": true,
        "prefer-const": true,
        "member-access": true,
        "quotemark": [true, "single"],
        "max-line-length": [true, 140],
        "no-var-keyword": true,
        "only-arrow-functions": [true],
        "variable-name": [true, "check-format", "allow-leading-underscore"],
        "curly": true,
        "new-parens": true,
        "array-type": [true, "generic"],
        "no-console": [true, "log"],
        "newline-before-return": true,
        "no-trailing-whitespace": true,
        "member-ordering": [true, "public-before-private", "static-before-instance", "variables-before-functions"],
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
        "no-output-on-prefix": true,
        "unified-signatures": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ]
    }
}
